<%- include("partials/header"); -%>

<h1>Compose</h1>


    
    <form action="/compose" method="post">

        <div class="form-group">
            <label class="title">Title</label>
            <input type="text" class="form-control" name="postTitle" autocomplete="off" >
           
        </div>
        <div class="form-group">
            <label class="title">Post</label>
            <textarea class="form-control comment" name="postBody" maxlength="1000" cols="1" rows="10"></textarea>
            <small class="form-text text-muted"> Only 1000 charecter allowed</small>
        </div>
        <button type="submit" class="btn btn-primary">Publish</button>

        
        
    </form>


<%- include("partials/footer"); -%>
